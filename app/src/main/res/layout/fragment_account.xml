<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.AccountFragment">

    <!-- Account toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/account_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/toolbar_account_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_account"
            android:layout_gravity="start"
            android:textColor="?attr/colorOnPrimary"
            style="@style/Title20SBold_NoColor"
            />

    </com.google.android.material.appbar.MaterialToolbar>

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/profile_picture"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_image"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account_toolbar"/>

    <Button
        android:id="@+id/button_edit_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="30dp"
        android:includeFontPadding="false"
        style="@style/Title20SBold_White"
        android:background="@drawable/shape_rounded_rectangle"
        app:backgroundTint="?attr/colorPrimaryVariant"
        android:text="@string/title_edit_profile"
        app:layout_constraintTop_toBottomOf="@id/account_toolbar"
        app:layout_constraintStart_toEndOf="@id/profileImage" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_logOut"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:text="@string/btn_log_out"
        style="@style/Title30SBold_NoColor"
        android:textColor="@android:color/holo_red_dark"
        app:backgroundTint="@android:color/transparent"
        app:icon="@drawable/icon_duck_feet"
        app:iconSize="60dp"
        app:iconTint="@android:color/holo_red_dark"
        app:iconGravity="start"
        app:layout_constraintTop_toBottomOf="@id/profileImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>