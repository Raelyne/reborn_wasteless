<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.DeleteAccountFragment">

    <!-- Toolbar for edit profile -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/delete_account_toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/toolbar_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow_back_24px"
            android:layout_gravity="start"
            />

        <TextView
            android:id="@+id/toolbar_delete_account_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_delete_account"
            android:textColor="?attr/colorOnPrimary"
            style="@style/Title20SBold_NoColor"
            android:layout_gravity="center_horizontal"/>

    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Username -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_layout_password_delete_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingHorizontal="50dp"
        app:boxBackgroundMode="filled"
        app:boxBackgroundColor="?attr/colorSurfaceVariant"
        app:layout_constraintTop_toBottomOf="@id/delete_account_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_username_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edt_current_password"
            style="@style/TitleRegular_White"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Username -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_layout_confirm_delete_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingHorizontal="50dp"
        app:boxBackgroundMode="filled"
        app:boxBackgroundColor="?attr/colorSurfaceVariant"
        app:layout_constraintTop_toBottomOf="@id/text_layout_password_delete_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_confirm_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TitleRegular_White"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/text_confirm_delete_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CONFIRM_DELETE"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="30dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/text_layout_confirm_delete_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_update"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="50dp"
        android:includeFontPadding="false"
        style="@style/Title20SBold_White"
        android:background="@drawable/shape_rounded_rectangle"
        app:backgroundTint="@color/error"
        android:text="@string/btn_confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_confirm_delete_subtitle" />

</androidx.constraintlayout.widget.ConstraintLayout>