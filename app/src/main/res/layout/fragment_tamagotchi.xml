<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/background_tamagotchi_2"
    tools:context=".ui.tamagotchi.TamagotchiFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Tamagotchi screen -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_pet_scene"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="#E0F7FA"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_pet_scene"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_pet_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/background_tamagotchi_scene"
                    tools:ignore="ContentDescription" />

                <View
                    android:id="@+id/view_night_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/semi_transparent_black"
                    android:visibility="invisible"
                    tools:visibility="visible"/>

                <ImageView
                    android:id="@+id/button_close"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="12dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_close_24px"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/text_speech_bubble"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/shape_speech_bubble"
                    android:text="@string/tamagotchi_sentence"
                    android:textSize="15sp"
                    style="@style/Title15SBold_BlackOnly"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toTopOf="@+id/image_pet_duck"
                    app:layout_constraintEnd_toEndOf="@+id/image_pet_duck"
                    app:layout_constraintStart_toStartOf="@+id/image_pet_duck"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/image_pet_duck"
                    android:layout_width="72dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="30dp"
                    android:contentDescription="@string/tamagotchi_duck"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_tamagotchi_3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.6" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Title header (tamagotchi name, coins -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="24dp"
            android:paddingHorizontal="4dp"
            app:layout_constraintTop_toBottomOf="@id/card_pet_scene"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/text_pet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tamagotchi_name"
                style="@style/Title25Bold_BlackOnly"
                tools:text="Gilbert"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/button_edit_name"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="3dp"
                android:src="@drawable/ic_edit_name_24px"
                app:tint="@color/grey_500"
                app:layout_constraintStart_toEndOf="@id/text_pet_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="ContentDescription"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_pet_coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_coin_status"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/icon_pet_coins"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/tamagotchi_coin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:id="@+id/text_pet_coins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="100"
                    style="@style/Title15SBold_BlackOnly"
                    app:layout_constraintStart_toEndOf="@id/icon_pet_coins"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Tamagotchi data stats (health,cleanliness,mood) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_pet_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/layout_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Health data stats -->
            <ImageView
                android:id="@+id/icon_health"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/tamagotchi_health"
                android:layout_marginBottom="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/icon_cleanliness"
                app:layout_constraintVertical_chainStyle="packed"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/title_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tamagotchi_stat_health"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/icon_health"
                app:layout_constraintTop_toTopOf="@id/icon_health" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progress_health"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:trackThickness="16dp"
                app:trackCornerRadius="8dp"
                android:progress="80"
                app:indicatorColor="#D37E83"
                app:trackColor="#F0F0F0"
                android:layout_marginEnd="12dp"
                app:layout_constraintStart_toStartOf="@id/title_health"
                app:layout_constraintEnd_toStartOf="@id/value_health"
                app:layout_constraintTop_toBottomOf="@id/title_health" />

            <TextView
                android:id="@+id/value_health"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                tools:text="80%"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/icon_health"
                app:layout_constraintBottom_toBottomOf="@id/progress_health" />

            <!-- Cleanliness data stats -->
            <ImageView
                android:id="@+id/icon_cleanliness"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/tamagotchi_cleanliness"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progress_health"
                app:layout_constraintBottom_toTopOf="@id/icon_mood"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/label_cleanliness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tamagotchi_stat_cleanliness"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/icon_cleanliness"
                app:layout_constraintTop_toTopOf="@id/icon_cleanliness" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progress_cleanliness"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:trackThickness="16dp"
                app:trackCornerRadius="8dp"
                android:progress="90"
                app:indicatorColor="#9FA8DA"
                app:trackColor="#F0F0F0"
                android:layout_marginEnd="12dp"
                app:layout_constraintStart_toStartOf="@id/label_cleanliness"
                app:layout_constraintEnd_toStartOf="@id/value_cleanliness"
                app:layout_constraintTop_toBottomOf="@id/label_cleanliness" />

            <TextView
                android:id="@+id/value_cleanliness"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                tools:text="90%"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/icon_cleanliness"
                app:layout_constraintBottom_toBottomOf="@id/progress_cleanliness" />

            <!-- Mood data stats -->
            <ImageView
                android:id="@+id/icon_mood"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/tamagotchi_mood"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progress_cleanliness"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/label_mood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tamagotchi_stat_mood"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/icon_mood"
                app:layout_constraintTop_toTopOf="@id/icon_mood" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progress_mood"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:trackThickness="16dp"
                app:trackCornerRadius="8dp"
                android:progress="98"
                app:indicatorColor="#FDD835"
                app:trackColor="#F0F0F0"
                android:layout_marginEnd="12dp"
                app:layout_constraintStart_toStartOf="@id/label_mood"
                app:layout_constraintEnd_toStartOf="@id/value_mood"
                app:layout_constraintTop_toBottomOf="@id/label_mood" />

            <TextView
                android:id="@+id/value_mood"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                tools:text="98%"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/icon_mood"
                app:layout_constraintBottom_toBottomOf="@id/progress_mood" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Interactive tamagotchi action buttons -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_pet_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/layout_pet_stats"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageButton
                android:id="@+id/button_play"
                android:layout_width="0dp"
                android:layout_height="88dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/tamagotchi_play"
                android:scaleType="fitXY"
                android:padding="12dp"
                android:contentDescription="@string/tamagotchi_action_play"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/button_gift"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageButton
                android:id="@+id/button_gift"
                android:layout_width="0dp"
                android:layout_height="88dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/tamagotchi_gift"
                android:scaleType="fitXY"
                android:padding="12dp"
                android:contentDescription="@string/tamagotchi_action_gift"
                app:layout_constraintStart_toEndOf="@id/button_play"
                app:layout_constraintEnd_toStartOf="@id/button_clean"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageButton
                android:id="@+id/button_clean"
                android:layout_width="0dp"
                android:layout_height="88dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/tamagotchi_clean"
                android:scaleType="fitXY"
                android:padding="12dp"
                android:contentDescription="@string/tamagotchi_action_clean"
                app:layout_constraintStart_toEndOf="@id/button_gift"
                app:layout_constraintEnd_toStartOf="@id/button_feed"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageButton
                android:id="@+id/button_feed"
                android:layout_width="0dp"
                android:layout_height="88dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/tamagotchi_food"
                android:scaleType="fitXY"
                android:padding="12dp"
                android:contentDescription="@string/tamagotchi_action_feed"
                app:layout_constraintStart_toEndOf="@id/button_clean"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>