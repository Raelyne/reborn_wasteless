<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wasteless" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Default font family -->
        <item name="fontFamily">@font/poppins_regular</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item> <!-- light green to dark green -->
        <item name="colorPrimaryVariant">@color/green_500</item> <!-- light green to lighter green -->
        <item name="colorOnPrimary">@color/white</item> <!-- pure white to milkier white -->
        <!-- Secondary brand color. For icons & buttons -->
        <item name="colorSecondary">@color/white</item> <!-- white to lighter green -->
        <item name="colorSecondaryVariant">@color/green_500</item> <!-- green to white -->
        <item name="colorOnSecondary">@color/grey_200</item> <!-- grey to white used for the icons in nav -->
        <!-- Tertiary brand color. for button reactions -->
        <item name="colorTertiary">@null</item>
        <item name="colorOnTertiary">@null</item>
        <!-- Surfaces -->
        <item name="colorSurface">@color/white</item> <!-- white to grey700 -->
        <item name="colorSurfaceVariant">@color/white</item> <!-- white to grey500-->
        <item name="colorOnSurface">@color/grey_500</item>
        <!-- Background color -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>
</resources>